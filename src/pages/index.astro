---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<script>
  var subtext = document.getElementById("subtext");
  var final = "or just call me Alex.";
  window.onload = () => {
    if (!subtext) {
      console.log();
    }
    setInterval(() => {
      if (!subtext) return;
      subtext.innerHTML = final.substring(0, subtext.innerHTML.length + 1);
    }, 100);
  };
</script>

<Layout title="Dirivial | Home">
  <main>
    <div class="flex flex-col items-center h-screen justify-center">
      <h1
        class="text-white epic-text text-7xl font-extrabold align-middle tracking-wider underline underline-offset-8 decoration-2"
      >
        {" "}DIRIVIAL
      </h1>
      <p id="subtext" class="pt-2 font-medium text-xl"></p>
    </div>

    <div class="pt-4 flex flex-col items-center">
      <p class="w-3/5 text-2xl text-center">
        Hi there! I'm a programmer who likes to do some web & game development
        in his free time.
      </p>

      <div class="pt-16 grid grid-cols-3 gap-16 w-3/4">
        <a
        href="https://github.com/Dirivial"
        class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">Github</a>
        <a
        href="https://twitter.com/Dirivial"
        class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">Twitter</a>
        
        <a
          href="https://www.youtube.com/channel/UC0Awfhr7Yl0tRYrVD2K6ZsQ"
          class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">YouTube</a>
      </div>
      <div class="pt-8 grid grid-cols-2 gap-16 w-2/4">
        <a
          href="/blog"
          class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">Blog</a>
          <a
          href="/faq"
          class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">About</a>
          
</div>
          <div class="pt-8 grid grid-cols-1 gap-16 w-1/4">
            <a
              href="mailto:alexander.kadeby@gmail.com"
              class="text-2xl py-2 text-white border-2 rounded-md border-white text-center font-medium hover:text-slate-800 hover:bg-white delay-0 duration-300 transition-all">E-Mail</a>
    </div>

    <div class="pt-64 flex flex-col items-center">
      <h1
        class="text-white epic-text text-4xl align-middle tracking-wider underline underline-offset-8 decoration-2"
      >
        PROJECTS
      </h1>
    </div>

    <div class="pt-16 flex flex-col items-center">
      <div class="grid grid-cols-2 gap-8 w-4/5">
        <Card
          title="Habits"
          body="A good 'ol habit tracker."
          href="https://github.com/Dirivial/habits"
        />
        <Card
          title="CastleMania"
          body="A 3D game made in unity to learn wave function collapse."
          href="https://github.com/Dirivial/CastleMania"
        />
        <Card
          title="dirivial.dev"
          body="This website you're on right now!"
          href="https://github.com/Dirivial/personal-site"
        />
        <Card
          title="A-maze-d"
          body="Small website for viewing a depth first search solving a maze"
          href="https://github.com/Dirivial/a-maze-d"
        />
      </div>
    </div>

    <div class="p-16"></div>
  </main>
</Layout>

<style>
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
