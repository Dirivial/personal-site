---
export interface Props {
  content: {
    title: string;
    description: string;
    pubDate: string;
  };
}
const {
  content: { title, description, pubDate },
} = Astro.props;
import Header from "../components/Header.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/pfp.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Quicksand"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.0/dist/katex.min.css"
      integrity="sha384-Xi8rHCmBmhbuyyhbI88391ZKP2dmfnOl4rT9ZfRI7mLTdk1wblIUnrIq35nqwEvC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <main>
      <Header />
      <article class="mt-3 p-1">
        <h1 class="text-4xl text-gradient pb-3">{title}</h1>
        <p class="">On {new Date(pubDate).toDateString()}</p>
        <hr class="border-gray-600 my-6" />
        <slot />
      </article>
      <div class="flex py-10">
        <a
          href="/blog"
          class="m-auto transition ease-in-out delay-75 duration-100 text-gray-600 hover:text-fuchsia-500 hover:scale-105 text-xl"
          >Back</a
        >
      </div>
    </main>
  </body>
</html>
<style is:global>
  :root {
    --grey-0: hsl(209, 61%, 16%);
    --grey-1: hsl(211, 39%, 23%);
    --grey-2: hsl(209, 34%, 30%);
    --grey-3: hsl(209, 28%, 39%);
    --grey-4: hsl(210, 22%, 49%);
    --grey-5: hsl(209, 23%, 60%);
    --grey-6: hsl(211, 27%, 70%);
    --grey-7: hsl(210, 31%, 80%);
    --grey-8: hsl(212, 33%, 89%);
    --grey-9: hsl(210, 36%, 96%);
    --teal-0: hsl(295, 85%, 18%);
    --teal-1: hsl(294, 72%, 25%);
    --teal-2: hsl(294, 68%, 32%);
    --teal-3: hsl(294, 60%, 38%);
    --teal-4: hsl(294, 48%, 46%);
    --teal-5: hsl(294, 43%, 51%);
    --teal-6: hsl(293, 48%, 58%);
    --teal-7: hsl(293, 54%, 68%);
    --teal-8: hsl(293, 67%, 85%);
    --teal-9: hsl(295, 58%, 93%);

    --accent: 187, 0, 14;
    --accent-gradient: linear-gradient(
      20deg,
      var(--teal-1),
      var(--teal-3) 30%,
      var(--teal-9) 60%
    );
    --teal-gradient: linear-gradient(
      90deg,
      var(--teal-0),
      var(--teal-3) 50%,
      var(--teal-5) 100%
    );
    --teal-gradient-rev: linear-gradient(
      225deg,
      var(--teal-5),
      var(--teal-3) 25%,
      var(--teal-0) 80%
    );
  }
  html {
    font-family: "Roboto", system-ui, sans-serif;
    background-color: var(--grey-0);
    scroll-behavior: smooth;
  }
  code {
    font-family: "Roboto", system-ui, sans-serif;
    /* font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace; */
  }

  main {
    margin: auto;
    margin-top: 2vh;
    margin-bottom: 2vh;
    max-width: 100ch;
  }

  p {
    margin-top: 3vh;
    color: var(--grey-7);
    font-family: "Quicksand", serif;
    font-size: 1rem;
    font-weight: thin;
  }

  li > p {
    margin-top: 0;
  }

  li {
    margin-left: 1vh;
  }

  article > img {
    margin: auto;
    padding-bottom: 1vh;
  }

  h1,
  h2,
  h3 {
    margin-top: 2vh;
    color: var(--grey-9);
    font-family: "Quicksand", serif;
    font-weight: bold;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    font-size: 1.5rem;
  }

  h3 {
    font-size: 1.25rem;
  }

  pre {
    border-radius: 3px;
    padding: 0.5rem;
    margin: 1rem;
  }

  strong {
    color: var(--grey-9);
    font-weight: bolder;
  }

  article a {
    color: var(--teal-3);
    font-family: "Roboto", serif;
    font-style: bold;
    text-decoration: underline;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .math > span {
    color: var(--grey-7);
  }

  /* Table styling */
  table {
    border-collapse: collapse;
    margin: auto;
    padding: 3vh;
    font-weight: thin;
    color: var(--grey-7);
    background-color: var(--grey-3);
  }

  th,
  td {
    padding: 1vh;
  }

  tbody tr:nth-child(odd) {
    background-color: var(--grey-1);
  }
  tbody tr:nth-child(even) {
    background-color: var(--grey-2);
  }
</style>
